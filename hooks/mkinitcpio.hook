[Trigger]
Operation = Upgrade
Type = Package
Target = *-firmware
Target = *-fw
Target = cryptsetup
Target = device-mapper
Target = kmod
Target = lvm2
Target = mkinitcpio*
Target = xf86-video-*
Target = systemd

[Action]
Description = Updating initcpio images...
When = PostTransaction
Depends = mkinitcpio
Exec = /bin/mkinitcpio -P
