[Trigger]
Operation = Install
Operation = Remove
Operation = Upgrade
Type = File
Target = boot/vmlinuz-*
Target = usr/lib/firmware/*
Target = usr/lib/initcpio/*
Target = usr/lib/libkmod.so
Target = usr/lib/modprobe.d/*
Target = usr/lib/udev/*
Target = usr/lib/xorg/drivers/*

[Action]
Description = Updating initcpio images...
When = PostTransaction
Depends = mkinitcpio
Exec = /bin/mkinitcpio -P
